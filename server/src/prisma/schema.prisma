generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  GUEST
  FREE
  PRO
  PREMIUM
  ADMIN
}

model User {
  id                   String   @id @default(uuid())
  name                 String?
  email                String   @unique
  isAdmin              Boolean  @default(false)
  role                 UserRole @default(GUEST)
  accountCreation      DateTime @default(now())
  hasMembership        Boolean  @default(false)
  membershipExpiration DateTime @default(now())

}
